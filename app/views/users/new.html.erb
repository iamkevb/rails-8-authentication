<h1>Register</h1>

<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>

<div class="form-container">
<%= form_with model: @user, url: users_path, local: true do |form| %>
  <div class="form-group">
    <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email] %>
  </div>

  <div class="form-group">
    <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "Confirm your email address", value: params[:email] %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %><br>
  </div>

  <div class="form-group">
    <%= form.submit "Sign Up" %>
  </div>
<% end %>
</div>
<%= link_to "Back", root_path %>
